import matplotlib.pyplot as plt

scores = [40, 50, 30, 45, 40, 50, 60, 60, 70, 50]
plt.hist(scores, bins=10)
plt.title("Score Distribution")
plt.xlabel("Score")
plt.ylabel("Frequency")
plt.show()


